<style lang="scss">
    
    .bar {
        width: 24px;
        height: 3px;
        background-color: var(--color-off-white);
        margin: 6px 0;

        &:nth-child(2) {
            width: 16px;
        }
    }

    .menu-open { background: #000;}

    header {
        height: 60px;
        position: fixed;
        background-color: transparent;
        display: flex;
        flex-flow: row;
        justify-content: space-between;
        align-items: center;
        position: relative;
        padding-inline: 1em;
        transition: all 250ms cubic-bezier(0.455, 0.03, 0.515, 0.955);
    }

    nav {
        position: absolute;
        right: 0;
        z-index: 1;
        top: 100%;
        left: 0;
        opacity: 0;
        transition: all 450ms ease-in-out;
        &.nav-open {
            opacity: 1;
            background: #000;
        }
    }

    nav ul {
        list-style: none;
        margin: 0;
        padding: 0;
        margin-bottom: 1em;
        margin-top: 1em;
