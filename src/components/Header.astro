---
const { blogHeader } = Astro.props;

const backgroundColor = blogHeader ? 'white' : 'white';
const foregroundColor = blogHeader ? '#111' : 'var(--dark-txt)';

---
<header>
    <div class="burger">
        <div class="bar"></div>
        <div class="bar"></div>
    </div>

    <nav>
        <ul>
            <li>
                <a class="animate-hover" href="#pricing">מחירון</a>
            </li>
            <li>
                <a class="animate-hover" href="#contact">צור קשר</a>
            </li>
            
            <li>
                <a class="animate-hover" href="/blog">בלוג</a>
            </li>

        </ul>
    </nav>
    <img src="/img/logo.svg" alt="forcard logo" aria-role="logo">
</header>


<style lang="scss" define:vars={{ foregroundColor, backgroundColor }}>

    .burger {
      cursor: pointer;
        z-index: 1;
    }
    
    .bar {
        width: 24px;
        height: 3px;
        background-color: var(--dark-txt);
        z-index: 1;
        margin: 6px 0;

        &:nth-child(2) {
            width: 16px;
        }
    }

    .menu-open { background: #f9f9f9;}

    header {
        height: 66px;
        position: fixed;
        background-color: transparent;
        background-color: var(--backgroundColor);
        display: flex;
        flex-flow: row;
        justify-content: space-between;
        align-items: center;
        position: relative;
        padding-inline: 1em;
        transition: all 250ms cubic-bezier(0.455, 0.03, 0.515, 0.955);
    }

    nav {
        position: absolute;
        right: 0;
        z-index: 1;
        top: 100%;
        left: 0;
        opacity: 0;
        z-index: -1;
        transition: all 450ms ease-in-out;
        &.nav-open {
            opacity: 1;
            z-index: 1;
            background: #f9f9f9;
        }
    }

    nav ul {
        list-style: none;
        margin: 0;
        padding: 0;
        margin-bottom: 1em;
        margin-top: 1em;
    }

    nav li {
        font-weight: bold;
        font-size: 18px;
        margin-bottom: 1em;
        margin-inline: 4em;
        padding-left: 10em;
    }

    nav li a {
        position: relative;
        text-decoration: none;
        color: var(--color-off-white);
        color: var(--foregroundColor);
        transition: opacity 150ms ease-in-out;
        &:hover {
            color: #fff;
            color: var(--foregroundColor);
        }
    }

    @media screen and (min-width: 54em) {
        header {
            padding-inline: 10em;
        }

        .burger { display: none; }

        nav {
            position: static;
            opacity: 1;
            z-index: 1;
            transition: none;
            background-color: transparent;
            background-color: var(--backgroundColor);
        }
        nav ul {
            display: flex;
            justify-content: flex-start;
        }

        nav ul li {
            margin: 0;
            padding-left: 4em;
        }

    }
</style>


<script>
    const menuBtn = document.querySelector('.burger');
    const header = document.querySelector('header');
    const nav = document.querySelector('nav');

    menuBtn.addEventListener('click', () => {
        header.classList.toggle('menu-open')
        nav.classList.toggle('nav-open')
    })

</script>
