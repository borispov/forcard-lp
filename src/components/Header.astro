        header {
            padding-inline: 10em;
        }

        .burger { display: none; }

        nav {
            position: static;
            opacity: 1;
            transition: none;
            background-color: transparent;
        }
        nav ul {
            display: flex;
            justify-content: flex-start;
        }

        nav ul li {
            margin: 0;

            a { 
