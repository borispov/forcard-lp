---
import PricingElement from "./PricingElement.astro";

const products = [
    {
        title: "בסיס",
        price: "300",
        badgeTitle: "",
        features: [
            "אחסון ותחזוקה",
            "עיצוב בהתאמה אישית",
            "תמונות/תיאור שירותים",
            "בקשות שינוי או הוספת תוכן"
        ],
        elementOrder: 1,
    },
    {
        title: "פרימיום",
        price: "500",
        badgeTitle: "הכי פופולרי",
        features: [
            "כל מה שבחבילת בסיס",
            "רענון עיצוב עד 3 פעמים בשנה",
            "חיבור Custom Domain",
            "זמינות גבוהה יותר לבקשות שינוי והוספת תוכן"
        ],
        elementOrder: 2,
    },
    {
        title: "בסיס",
        price: "1,000",
        badgeTitle: "בפיתוח",
        features: [
            "כל מה שבחבילת פרימיום",
            "פיתוח פיצ׳רים בהתאמה אישית",
            "אפשרות חיבור בלוג",
        ],
        elementOrder: 3,
    }
]

---
<section id="pricing">
    <h1>מחירון</h1>

    <div class="pricing-layout">
        {
            products.map(product => <PricingElement {...product} />)
        }
    </div>

</section>

<style lang="scss">

    section {
        padding: 0 1em;
        @media screen and (min-width: 35em) {
            padding: 3em 2em;
        }
    }

    h1 {
        text-align: center;
        font-size: 60px;
        text-decoration: underline;
        font-family: 'Tahoma';
    }

    .pricing-layout {
        margin-inline: auto;
        display: flex;
        flex-flow: column;
        padding: 2em 0;
        gap: 2em;

        @media screen and (min-width: 768px) {
            flex-flow: row;
            gap: 10px;
            justify-content: center;
            align-items: center;
        }
    }

</style>
