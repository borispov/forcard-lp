---
import "../styles/remedy.css";
export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-DLNXCB3S3P"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-DLNXCB3S3P');
    </script>
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;700&display=swap" rel="stylesheet">
		<title>{title}</title>
		<script 
			src="https://cdnjs.cloudflare.com/ajax/libs/animejs/2.0.2/anime.min.js">
		</script>
	</head>
	<body>
		<slot />
	</body>
</html>
<style>
	:root {
		/* --font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem);*/
		--font-size-lg: clamp(1.9rem, 1.5vw + 1.5rem, 3.125rem);
		--font-size-xl: clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem); 
		--fon-size-base: 16px;

		--color-text-white: hsl(0,0%, 100%);
		--color-text-black: hsl(10,40%, 8%);

		--red-primary: hsl(10, 68%, 46%);
		--red-secondary: hsl(11, 57%, 53%);
		--red-shade-1: hsl(10, 58%, 62%);
		--red-shade-2: hsl(9, 58%, 69%);
		--red-shade-3: hsl(10, 58%, 77%);
		--red-shade-4: hsl(9, 59%, 85%);


		--hero-linear: linear-gradient(99deg, var(--red-shade-1) 0%, var(--red-primary) 100%);

		--color-text: hsl(12, 5%, 4%);
		--color-bg: hsl(10, 21%, 95%);
		--color-border: hsl(17, 24%, 90%);

		--color-off-white: hsla(10, 100%, 95%, 0.81);


	}

	html {
		direction: rtl;
		font-family: "Heebo", system-ui, sans-serif;
		background-color: var(--color-bg);
		/* font-size: var(--font-size-base); */
		font-size: 16px;
	}



	:global(h1) {
		font-size: var(--font-size-xl);
	}

	:global(h2) {
		font-size: var(--font-size-lg);
	}

  :global(.animate-hover) {
    display: inline-block;
  }

  :global(.animate-hover::after) {
    content: "";
    position: absolute;
    width: 100%;
    height: 2px;
    bottom: 0;
    right: 0;
    background-color: var(--red-shade-4);
    transform-origin: bottom left;
    transition: transform 250ms ease-out;
    transform: scaleX(0);
  }

  :global(.animate-hover:hover::after) {
    transform: scaleX(1);
    transform-origin: bottom right;
  }




</style>
